<div class="toolbar" role="navigation">
{{> nav-toggle}}
  {{!-- {{#with site.homeUrl}}
  <a href="{{{relativize this}}}" aria-label="Cloudnative Documentation Home" class="home-link{{#if @root.page.home}} is-current{{/if}}"></a>
  {{/with}} --}}
{{> breadcrumbs}}
{{> page-versions}}
  {{#if (and page.fileUri (not env.CI))}}
  <div class="edit-this-page"><a href="{{page.fileUri}}"><strong>Edit</strong></a></div>
  {{else if (and page.editUrl (or env.FORCE_SHOW_EDIT_PAGE_LINK (not page.origin.private)))}}
  <div class="edit-this-page"><a href="{{page.editUrl}}"><strong>Edit</strong></a></div>
  {{/if}}
      {{#if env.SITE_SEARCH_PROVIDER}}
      <div class="navbar-item search hide-for-print">
        <div id="search-field" class="field">
          <label class="visual-search-label-bc" for="search-input">&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;</label>
          <input label="Search" aria-label="Search" id="search-input" type="text" placeholder="Search the docs" {{#if page.home}} autofocus{{/if}}>
          <label class="filter checkbox" style="display: none">
            <input type="checkbox" data-facet-filter="component:{{page.component.name}}" checked> Only this project
          </label>
        </div>
      </div>
      {{/if}}
</div>
